<body>
  
  <div style="text-align: center; margin-top: 5em;">
    <img src="/html/img/duchamp_spin_small.gif" style=""><br>
    <span style="font-weight: bold;color: #00b894;">Analyzing Entities</span><br>
    <span><span id="status">[...waiting for first update]</span></span>


  </div>
  


  <script>

    function check(){

      document.getElementById('status').innerHTML = 'updating...'
      fetch('/document/<%-docId%>/status')
        .then(response => response.json())
        .then(data => {

          console.log(data)
          if (data.entityStatus){
            document.getElementById('status').innerHTML = data.entityStatus         
          }else{
            document.getElementById('status').innerHTML = '[...waiting for first update]'
          }

          if (data.entityStatus === 'Done'){
            window.location = '/document/<%-docId%>/entities'

          }

        });


    }


    check()
    window.setInterval(()=>{

      check()

    },2000)



  </script>

</body>

</html>
